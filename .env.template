# DockJob Environment Variables Template
# Copy this file to .env and customize the values for your deployment

# Replace 'localhost' and '8301' with your server's hostname/IP and desired port
DOCKJOB_HOST=localhost
DOCKJOB_PORT=8301

# API URLs - Update these to match your deployment
APIAPP_APIURL=http://${DOCKJOB_HOST}:${DOCKJOB_PORT}/api
APIAPP_TRIGGERAPIURL=http://${DOCKJOB_HOST}:${DOCKJOB_PORT}/triggerapi
APIAPP_APIDOCSURL=http://${DOCKJOB_HOST}:${DOCKJOB_PORT}/apidocs
APIAPP_FRONTENDURL=http://${DOCKJOB_HOST}:${DOCKJOB_PORT}/frontend

# CORS Settings
APIAPP_COMMON_ACCESSCONTROLALLOWORIGIN=http://${DOCKJOB_HOST}:${DOCKJOB_PORT}

# Security - CHANGE THIS PASSWORD!
DOCKJOB_EXTERNAL_TRIGGER_SYS_PASSWORD=change-this-secure-password

# Job Execution Settings (optional)
APIAPP_USERFORJOBS=dockjobuser
APIAPP_GROUPFORJOBS=dockjobgroup

# Data Persistence - Store job data in mounted volume
APIAPP_OBJECTSTORECONFIG={"Type":"SimpleFileStore", "BaseLocation": "/data"}

# Examples for common deployments:
#
# For TrueNAS at IP 192.168.1.100:
# DOCKJOB_HOST=192.168.1.100
# DOCKJOB_PORT=8301
#
# For domain-based deployment:
# DOCKJOB_HOST=dockjob.yourdomain.com
# DOCKJOB_PORT=80